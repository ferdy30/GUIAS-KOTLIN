<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <EditText
        android:id="@+id/input_nombre"
        android:layout_width="373dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="22dp"
        android:layout_marginTop="389dp"
        android:layout_marginEnd="16dp"
        android:ems="10"
        android:hint="@string/nombres"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:autofillHints="" />

    <EditText
        android:id="@+id/input_apellido"
        android:layout_width="367dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/input_nombre"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="27dp"
        android:layout_marginTop="39dp"
        android:layout_marginEnd="17dp"
        android:ems="10"
        android:hint="@string/apellidos"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:autofillHints="" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="83dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/input_nombre"
        android:layout_alignParentTop="true"
        android:layout_marginTop="62dp"
        android:layout_marginEnd="143dp"
        android:fontFamily="sans-serif-medium"
        android:text="@string/login"
        android:textColor="@color/black"
        android:textSize="24sp" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/input_apellido"
        android:layout_alignParentTop="true"
        android:layout_marginTop="578dp"
        android:layout_marginEnd="139dp"
        android:text="@string/button" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="213dp"
        android:layout_height="328dp"
        android:layout_below="@+id/textView"
        android:layout_alignEnd="@+id/input_nombre"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="79dp"
        android:contentDescription="@string/todo1"
        app:srcCompat="@drawable/pnico" />


</RelativeLayout>